<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= link_to "Home", "/" %>
    <%= yield %>
    <div class="flash_message">
    <% flash.each do |type, message| %>
      <% if message.class == Array %>
        <% message.each do |mess| %>
            <p><%= mess %></p>
          <% end %>
      <% else %>
        <p><%= message %></p>
      <% end %>
    <% end %>
  </div>
  </body>
</html>
